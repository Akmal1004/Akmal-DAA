def fibonacci(n):
    if n <= 1:
        return n
    else:
        return fibonacci(n-1) + fibonacci(n-2)

nterms = 10  # Number of terms in the series

if nterms <= 0:
    print("Please enter a positive integer")
else:
    print("Fibonacci Series:")
    for i in range(nterms):
        print(fibonacci(i))
